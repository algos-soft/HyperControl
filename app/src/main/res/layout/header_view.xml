<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#292929"
    >

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/hdr_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1 text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="middle"/>

        <TextView
            android:id="@+id/hdr_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2 text"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="middle" />

        <TextView
            android:id="@+id/hdr_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 3 text"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="middle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/hdr_item_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="999"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="24sp">
        </TextView>

        <TextView
            android:id="@+id/hdr_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sensori"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>