<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#292929"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="16dp">

        <!--<TextView-->
            <!--android:id="@+id/hdr_line1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Line 1 text"-->
            <!--android:textSize="18sp"-->
            <!--android:textStyle="bold"-->
            <!--android:singleLine="true"-->
            <!--android:ellipsize="middle"/>-->

        <TextView
            android:id="@+id/hdr_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2 text"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="middle" />

        <TextView
            android:id="@+id/hdr_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 3 text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="middle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/hdr_item_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="999"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/hdr_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sensori"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>