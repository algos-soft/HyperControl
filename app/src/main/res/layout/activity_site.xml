<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_view"/>

    <include layout="@layout/list_view"/>

    <LinearLayout
        android:id="@+id/statusPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/connect_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="@string/btn_conn_offline"
            android:textOn="@string/btn_conn_connected" />

        <ImageButton
            android:id="@+id/statusAlertButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/danger" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bTestReq"
        android:text="Test req"
        />

</LinearLayout>
